{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/companyNew.schema.json",
  "type": "object",
  "properties": {
    "themeName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "poemId": {
      "type": "integer"
    },
    "highlightedLines": {
      "type": "array",
      "items": {
        "type": "integer"
      },
      "minItems": 1
    }
  },
  "additionalProperties": false,
  "required": [
    "themeName",
    "poemId",
    "highlightedLines"
  ]
}